# =============================================================================
# BunnyDB Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your deployment.
# All values shown are defaults - change secrets before production use!
#
# Quick start:
#   cp .env.example .env
#   # Edit .env with your values
#   docker compose up -d
# =============================================================================

# -----------------------------------------------------------------------------
# Catalog Database (BunnyDB's internal metadata store)
# -----------------------------------------------------------------------------
BUNNY_CATALOG_HOST=catalog
BUNNY_CATALOG_PORT=5432
BUNNY_CATALOG_USER=postgres
BUNNY_CATALOG_PASSWORD=bunnydb
BUNNY_CATALOG_DATABASE=bunnydb

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# IMPORTANT: Change these in production!
BUNNY_JWT_SECRET=change-me-in-production-use-a-random-string
BUNNY_ADMIN_USER=admin
BUNNY_ADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# Temporal (Workflow Engine)
# -----------------------------------------------------------------------------
TEMPORAL_HOST_PORT=temporal:7233
TEMPORAL_NAMESPACE=default
BUNNY_WORKER_TASK_QUEUE=bunny-worker

# -----------------------------------------------------------------------------
# API Server
# -----------------------------------------------------------------------------
BUNNY_API_PORT=8112

# -----------------------------------------------------------------------------
# UI
# -----------------------------------------------------------------------------
# Public URL for the API (used by the UI to make requests)
NEXT_PUBLIC_API_URL=http://localhost:8112

# -----------------------------------------------------------------------------
# Optional: Source Database Requirements (for reference)
# -----------------------------------------------------------------------------
# Your source PostgreSQL must have these settings:
#   wal_level = logical
#   max_replication_slots = 4   (or higher)
#   max_wal_senders = 4         (or higher)
#
# To check: SELECT name, setting FROM pg_settings
#           WHERE name IN ('wal_level', 'max_replication_slots', 'max_wal_senders');
